@model IEnumerable<MusicApp.Web.ViewModels.Admin.UserManagement.UserManagementIndexViewModel>

@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml"; // add layout if you want like the second example
}

<style>
    body {
        background-color: #ccd0cf;
    }
</style>

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col-md-12">
            <h2>Manage Users</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 mb-3">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <i class="bi bi-people-fill me-2"></i> Users List
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@user.Email</td>
                                        <td>@(user.IsAdmin ? "Admin" : "User")</td>
                                        <td>
                                           @*  @if (user.IsDeleted)
                                            {
                                                <span class="badge bg-danger">Banned</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Active</span>
                                            } *@
                                        </td>
                                        <td>
                                            <form asp-action="ToggleAdmin" method="post" style="display:inline;">
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <button type="submit" class="btn btn-sm @(user.IsAdmin ? "btn-warning" : "btn-success")">
                                                    @(user.IsAdmin ? "Remove Admin" : "Make Admin")
                                                </button>
                                            </form>
@* 
                                            <form asp-action="ToggleBan" method="post" style="display:inline;">
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <button type="submit" class="btn btn-sm @(user.IsDeleted ? "btn-success" : "btn-danger") ms-2">
                                                    @(user.IsDeleted ? "Unban" : "Ban")
                                                </button>
                                            </form> *@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@using MusicApp.Web.ViewModels.Playlists
@model NewPlaylistViewModel

<h2>Create New Playlist</h2>

<form asp-action="New" method="post">
    <label>Playlist Name:</label>
    <input asp-for="Title" />
    <span asp-validation-for="Title"></span>

    <h3>Select Songs</h3>
    @for (int i = 0; i < Model.Songs.Count; i++)
    {
        <div>
            <input type="checkbox" asp-for="@Model.Songs[i].IsSelected" />
            <input type="hidden" asp-for="@Model.Songs[i].Id" />
            @Model.Songs[i].Title
        </div>
    }
    <button type="submit">Create Playlist</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@using MusicApp.Data.Models
@model IEnumerable<Playlist>

@{
    ViewData["Title"] = "Your Playlists";
}

<style>
    body{
        background-color: #111;
        color: #CCD0CF;
    }

    #btn-playlist{
        display: inline-block;
        padding: 5px 10px;
        background-color: #4A5C6A;
        color: #CCD0CF;
        text-decoration: none;
        border-radius: 0.375rem;
        transition: background-color 0.3s ease;
        border: none;
    }

    #btn-playlist:hover{
            background-color: #CCD0CF;
            color: #4A5C6A;
    }
</style>

<h2>Your Playlists</h2>

<a asp-action="New" class="btn btn-primary mb-3" id="btn-playlist">New Playlist</a>

@if (!Model.Any())
{
    <p>You don't have any playlists yet.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Songs Count</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var playlist in Model)
            {
                <tr>
                    <td>@playlist.Title</td>
                    <td>@playlist.PlaylistsSongs?.Count ?? 0</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@playlist.Id" class="btn btn-sm btn-info">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

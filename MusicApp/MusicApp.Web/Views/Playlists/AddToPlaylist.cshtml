@using MusicApp.Web.ViewModels.Playlists
@model AddToPlaylistViewModel

<h2>Add to Playlist</h2>

<form asp-action="AddToPlaylist" method="post">
    <input type="hidden" asp-for="SongId" />
    <label>Select Playlist:</label>
    <select asp-for="SelectedPlaylistId" asp-items="Model.Playlists">
        <option value="">-- Select Playlist --</option>
    </select>
    <span asp-validation-for="SelectedPlaylistId"></span>

    <button type="submit">Add</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

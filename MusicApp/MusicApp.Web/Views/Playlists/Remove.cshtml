@using MusicApp.Web.ViewModels.Playlists
@model RemoveSongViewModel
@{
    ViewData["Title"] = "Delete Playlist";
}

<link href="~/css/style.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-4">
        <h1>@ViewData["Title"]</h1>
        <hr />
        <p style="color: white">
            Are you sure you want to remove <strong>@Model.Title</strong>?
        </p>
        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Remove" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Title" />
                <button type="submit" class="btn btn-danger" style="border-radius: 6px; padding: 10px;">
                    <i class="fas fa-trash"></i> Confirm Delete
                </button>
            </form>
            <a asp-controller="Playlists" asp-action="Index" asp-route-id="@Model.Id" id="btn-add" style="text-decoration:none; margin: 0; padding:10px;">
                <i class="fas fa-times-circle" style="border-radius: 6px"></i> Cancel
            </a>
        </div>
    </div>
</div>
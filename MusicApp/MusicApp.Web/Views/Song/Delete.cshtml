@using MusicApp.Web.ViewModels.Song
@model DeleteSongViewModel

@{
    ViewData["Title"] = "Delete Song";
}

<link href="~/css/style.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-4">
        <h1 class="text-white">@ViewData["Title"]</h1>
        <hr />
        <p class="mb-0 text-white"><strong>Published By:</strong> @Model.Publisher</p>
        <p class="text-white">
            Are you sure you want to delete <strong>@Model.Title</strong>?
        </p>

        <div class="d-flex align-items-center gap-3 mt-4">
            <form asp-action="Delete" method="post" class="m-0">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Title" />
                <input type="hidden" asp-for="PublisherId" />
                <button type="submit" class="btn btn-danger" style="border-radius: 6px; padding: 10px 16px;">
                    <i class="fas fa-trash"></i> Confirm Delete
                </button>
            </form>

            <a asp-controller="Song"
               asp-action="Index"
               id="btn-cancel">
                <i class="fas fa-times-circle"></i> Cancel
            </a>
        </div>
    </div>
</div>
